    <!-- Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">

                        <% i=1 %>
                        <% @moviedata.each do |line1| %>
                        Average Ratings for <%= line1.name %><br/>
                        Jump Scares: <%= Rankings.where(id: i).average("jump")%>/5<br/>
                        Psychological Thrills<%= Rankings.where(id: i).average("thrill")%>/5<br/>
                        Special Effects Quality<%= Rankings.where(id: i).average("sfx")%>/5<br/>
                        Overall Rating:<%= Rankings.where(id: i).average("rating")%>/5<br/>
                        <% i=i+1 %>
                        <br/>
                        <% end %>
                        <%= link_to "Back to List of Movies", {:controller => "startup", :action => "movielist"}, :class => "btn btn-default btn-lg"  %><br/>
                        <%= link_to "", {:controller => "startup"}, :class => "btn btn-circle page-scroll"  %><br/>

                    </div>
                </div>
            </div>
        </div>
    </header>
