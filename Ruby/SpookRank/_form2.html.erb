<%= form_for (comment), url: startup_new2_path do |f| %>

  <div class="field">
    <%= f.label :"Which Movie?" %>
    <% options = options_from_collection_for_select(@moviedata, 'id', 'name') %>
    <%= f.select :id,  options %>
  </div>

  <div class="field">
    <%= f.label :"What did you think of the movie?" %>
    <%= f.text_field :comment, :minimum => 1 %>

  </div>

  <div class="actions">
    <%= f.submit "Add a Comment", :class => "btn btn-default btn-lg" %>
  </div>
<% end %>
