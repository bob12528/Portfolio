    <!-- Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <% @commentdata.each do |line1| %>
                        <% @movee= Movies.where(:id => line1).first %> 
                        <% #this finds the movie name corresponding to the comment's movie ID field %>          
                        Comment for <%=@movee.name %>
                        <% ##this outputs the movie's name value %>
                       
                        <br/>
                        "I felt that <%=@movee.name %> was <%= line1.comment %>"
                        <br/>
                        <br/>
                        <% end %>
                        <%= link_to "Back to List of Movies", {:controller => "startup", :action => "movielist"}, :class => "btn btn-default btn-lg"  %><br/>
                        <%= link_to "", {:controller => "startup"}, :class => "btn btn-circle page-scroll"  %><br/>

                    </div>
                </div>
            </div>
        </div>
    </header>
